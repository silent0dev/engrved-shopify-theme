#shopify-section-cart-shineon {
  max-width: 100% !important;

  .cart-shineon {
    max-width: 1200px;
    margin: auto;
  }

  .so-cart-callout {
    border-bottom: 1px solid #e8e9eb;
    .so-cart-callout-text {
      margin-left: $grid-gutter /3;
    }
    .cart-callout-icon {
      margin-right: $grid-gutter /2;

      svg {
        font-size: 1em;
      }
    }
    > div.container p {
      padding: 5px 10px;
    }
  }

  @media only screen and (max-width: 991px) {
    .container {
      width: 100%;
    }
  }

  .so-cart-shineon-form {
    display: flex;
    flex-wrap: wrap;
    align-items: stretch;
    margin-bottom: 0;

    @media (max-width: 767px) {
      flex-direction: column;
    }

    .so-cart-price {
      margin-right: $grid-gutter /2;
    }

    .so-cart-items {
      @media (min-width: 768px) {
        width: 65%;
      }
      @media (min-width: 992px) {
        width: 70%;
      }

      .so-cart-item {
        padding: 1rem;
        align-items: stretch;
        @media (max-width: 767px) {
          flex-flow: row;
        }

        @media (max-width: 767px) {
          .so-cart-meta {
            text-align: left;
            padding: 0 $grid-gutter;
          }
        }
        @media (max-width: 991px) {
          .so-cart-meta {
            .so-cart-qty {
              border-color: #ececec;

              .so-product-minus,
              .so-product-plus {
                background-color: transparent;
                border: 0;
              }
            }
          }
        }

        a.so-product-title {
          text-transform: none;
        }

        &:last-of-type {
          border-bottom: 0;
        }

        .so-cart-remove-wrap {
          margin-top: 0;
        }
      }
    }
    .so-cart-summary {
      font-size: 14px;
      padding: 3px;
      @media (min-width: 768px) {
        width: 35%;
      }
      @media (min-width: 992px) {
        width: 30%;
      }

      .summary-item {
        padding: $height-of-line /2 $grid-gutter;

        &.wrap__cart_totals > div {
          margin: 0;
          font-size: inherit;

          .wrap__cart__subtotal {
            font-size: 18px;
            margin: 0;
            font-weight: $font-weight-bold;
          }

          .money {
            padding-left: $grid-gutter;
          }

          .cart__shipping, .sub-header {
            margin: 0;
            @media (max-width: 767px) {
              font-weight: $font-weight-bold;
            }
          }
        }

        & + .summary-item {
          border-top: 1px solid #e8e9eb;
        }

        &.header {
          font-size: 20px;
          margin-bottom: 0;
          line-height: 1.8;
          font-weight: $font-weight-bold;
          display: none;
          @media (min-width: 768px) {
            display: block;
          }
        }

        @media (max-width: 767px) {
          .sub-header {
            line-height: 1.8;
          }
          text-align: center;
        }
        @media (min-width: 768px) {
          .sub-header {
            display: none;
          }
        }

        .callouts-guarantee-secure {
          flex-direction: row;
          padding-top: $height-of-line /2;
          padding-bottom: $height-of-line /2;
          @media (max-width: 767px) {
            align-items: center;
          }

          @media (min-width: 768px) {
            flex-direction: column;
          }

          @media (max-width: 767px) {
            .callout-guarantee {
              flex: 0 0 70%;
            }
            .callout-secure {
              flex: 0 0 30%;
            }
          }

          .d-flex {
            align-items: center;
          }

          @media (min-width: 768px) {
            & >.flex-item + .flex-item {
              margin-top: $height-of-line /1.5;
            }
          }

          .icon {
            width: $grid-gutter *2.5;
            flex: 0 0 $grid-gutter *2;
            margin-right: $grid-gutter /2;
            text-align: center;
            font-size: $height-of-line;

            img {
              max-width: 100%;
            }
          }
        }
      }

      .so-cart-flex {
        padding: $height-of-line /2 $grid-gutter;
        @media (min-width: 768px) {
          padding: $height-of-line /2 $grid-gutter /2.5;
        }
      }
      .so-cart-flex.so-security-seal {
        padding-bottom: $height-of-line;
      }
      .so-cart-flex.so-proceed-checkout-wrap,
      .so-cart-flex.so-security-seal {
        padding-top: 0;
      }
      .so-cart-flex.so-proceed-checkout-wrap {
        .so-proceed-checkout-btn {
          font-size: 18px;
          @media (max-width: 1024px) {
            font-size: 16px;
          }
        }
        .so-payment-methods {
          padding-top: 10px;
        }
      }
    }
  }
}




