  & + .so-modal-btn-add-to-cart-wrap {
    @media(min-width: 768px) {
      margin-top: 20px;
    }
    @media(min-width: 992px) {
      margin-top: 30px;
    }
  }


}
.so-custom-fields-wrap {
  display: grid;
  grid-template-columns: repeat(12, calc(100% / 12));
  grid-column-gap: 5px;
  grid-row-gap: 5px;
  width: calc(100% - 55px);
  margin-top: 15px;
}
.so-custom-field-wrap {
  display: inline-flex;
  flex-direction: column;
  grid-column-end: span 12;
  label {
    font-family: $font_header;
    font-size: 14px;
    font-weight: 700;
    margin: 0 0 5px 0;
  }
  input[type="text"] {
    width: 100%;
    max-width: 100%;
    padding: 5px;
    font-size: 16px;
    font-family: 'Tangerine', serif;
    font-weight: bold;
    border: 1px solid #e2e2e2;
    border-radius: $border_radius;
    text-align: center;
    background-color: transparent;

    &:focus {
      box-shadow: none;
      outline: none;
    }
  }
  input[type="text"]::-webkit-input-placeholder { /* Chrome/Opera/Safari */
    font-size: 16px;
    font-weight: normal;
    font-style: italic;
    font-family: $font_modal_text;
    font-weight: 400;
  }
  input[type="text"]::-moz-placeholder { /* Firefox 19+ */
    font-size: 16px;
    font-weight: normal;
    font-style: italic;
    font-family: $font_modal_text;
    font-weight: 400;
  }
  input[type="text"]:-ms-input-placeholder { /* IE 10+ */
    font-size: 16px;
    font-weight: normal;
    font-style: italic;
    font-family: $font_modal_text;
    font-weight: 400;
  }
  input[type="text"]:-moz-placeholder { /* Firefox 18- */
    font-size: 16px;
    font-weight: normal;
    font-style: italic;
    font-family: $font_modal_text;
    font-weight: 400;
  }
  &.input-error {
    input[type="text"],
    select {
      border-color: red !important;
    }
    label {
      color: red;
    }
  }
  select {
    border: 1px solid #e2e2e2;
    border-radius: $border_radius;
  }
  &.so-cf-col-1 {
    grid-column-end: span 1;
  }
  &.so-cf-col-2 {
    grid-column-end: span 2;
  }
  &.so-cf-col-3 {
    grid-column-end: span 3;
  }
  &.so-cf-col-4 {
    grid-column-end: span 4;
  }
  &.so-cf-col-5 {
    grid-column-end: span 5;
  }
  &.so-cf-col-6 {
    grid-column-end: span 6;
  }
  &.so-cf-col-7 {
    grid-column-end: span 7;
  }
  &.so-cf-col-8 {
    grid-column-end: span 8;
  }
  &.so-cf-col-9 {
    grid-column-end: span 9;
  }
  &.so-cf-col-10 {
    grid-column-end: span 10;
  }
  &.so-cf-col-11 {
    grid-column-end: span 11;
  }
  &.so-cf-col-12 {
    grid-column-end: span 12;
  }
  .so-custom-field-birthstone-wrap {
    display: flex;
    flex-wrap: wrap;
    margin-right: -3px;
    margin-left: 3px;
  }
  #big-img-w {
    flex: 0 0 100%;
    text-align: center;
    margin: 0 0 10px;
  }
  .so-custom-field-birthstone-label {
    margin: 0 3px 10px;
    font-weight: normal;
    border: 1px solid #e5e5e5;
    border-radius: $border_radius;
    text-align: center;
    cursor: pointer;
    padding: 10px 0;
    flex: 1 1 calc(25% - 6px);
    @media(min-width: 1200px) {
      flex: 1 1 calc(16.66667% - 6px);
    }
    input[type="radio"] {
      display: none;
    }
    &.so-custom-field-birthstone-selected {
      border-color: #d3a841;
    }
    .so-custom-field-birthstone-circle {
      min-height: 25px;
      width: 25px;
      max-width: 25px;
      border-radius: 50%;
      margin: 0 auto 10px auto;
      background: url({{ 'theme-shineon-birthstones.png' | asset_url }}) no-repeat;
      background-size: 100px 75px;
      &.Jan, &.January {
        /* garnet */
        background-color: #781c2e;
        width: 25px;
        height: 25px;
        background-position: 0px 0px;
      }
