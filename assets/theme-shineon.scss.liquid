          @media(min-width: 768px) and (max-width: 991px) {
            white-space: normal !important;
          }
          span {
            white-space: normal;
          }
        }
      }
      // The bordered label swatch
      label.so-swatch {
        cursor: pointer;
        margin: 0;
        background-color: #fff;
        border: 1px solid #999999;
        padding: 6px 5px;
        text-align: center;
        width: 100%;
        color: #000;
        font-size: 14px;
        display: inline-block;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        &.so-swatch-metal {

        }
