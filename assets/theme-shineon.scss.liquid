      padding: 5px 25px;
      height: 50px;
      text-align: left;
      margin-bottom: 0;
    }
    input[type="text"]::-webkit-input-placeholder { /* Chrome/Opera/Safari */
      font-size: 14px;
      font-family: "Avenir Next";
      font-style: normal;
    }
    input[type="text"]::-moz-placeholder { /* Firefox 19+ */
      font-size: 14px;
      font-family: "Avenir Next";
