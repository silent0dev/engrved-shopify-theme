// SIMPLE GRID - SASS/SCSS ~ simplegrid.io

$so-width: 96%;
$so-gutter: 4%;
$so-breakpoint-xsmall: 22.5em; // 360px
$so-breakpoint-small: 33.75em; // 540px
$so-breakpoint-med: 45em; // 720px
$so-breakpoint-xmd: 60em; // 960px
$so-breakpoint-large: 75em; // 1200px ~ 60em is 960px

.so-container {
  width: 100%;
  margin-left: auto !important;
  margin-right: auto !important;

  @media only screen and (min-width: $so-breakpoint-small) {
    width: 100%;
  }

  @media only screen and (min-width: $so-breakpoint-large) {
    width: 100%;
    max-width: 1170px; // 1200px
  }
  &.so-product-wrap {
    margin-top: 0;
    padding-top: 0;
  }
}
.so-row {
  position: relative;
  width: 100%;
}

.so-row.so-row-fluid {
  [class^="so-col"] {
    margin-left: 0;
    margin-right: 4%;
  }
  .so-col-12{
    margin: 2% 0 0.3rem;
  }
}

.so-row [class^="so-col"],
.so-row [class*="so-col"] {
  float: left;
  margin: 0.5rem 2%;
  min-height: 0.125rem;
}

.so-row:not(.so-row-flex)::after {
  content: "";
  display: table;
  clear: both;
}
.so-row-flex {
  display: flex;
}

.so-visible-sm {
  display: none !important;
}

.so-visible-md {
  display: none !important;
}

.so-visible-xmd {
  display: none !important;
}

.so-col-1,
.so-col-2,
.so-col-3,
.so-col-4,
.so-col-5,
.so-col-6,
.so-col-7,
.so-col-8,
.so-col-9,
.so-col-10,
.so-col-11,
.so-col-12 {
  width: $so-width;
}

.so-col-1-sm { width:($so-width / 12) - ($so-gutter * 11 / 12); }
.so-col-2-sm { width: ($so-width / 6) - ($so-gutter * 10 / 12); }
.so-col-3-sm { width: ($so-width / 4) - ($so-gutter * 9 / 12); }
.so-col-4-sm { width: ($so-width / 3) - ($so-gutter * 8 / 12); }
.so-col-5-sm { width: ($so-width / (12 / 5)) - ($so-gutter * 7 / 12); }
.so-col-6-sm { width: ($so-width / 2) - ($so-gutter * 6 / 12); }
.so-col-7-sm { width: ($so-width / (12 / 7)) - ($so-gutter * 5 / 12); }
.so-col-8-sm { width: ($so-width / (12 / 8)) - ($so-gutter * 4 / 12); }
.so-col-9-sm { width: ($so-width / (12 / 9)) - ($so-gutter * 3 / 12); }
.so-col-10-sm { width: ($so-width / (12 / 10)) - ($so-gutter * 2 / 12); }
.so-col-11-sm { width: ($so-width / (12 / 11)) - ($so-gutter * 1 / 12); }
.so-col-12-sm { width: $so-width; }

@media only screen and (min-width: $so-breakpoint-med) {
  .so-col-1 { width:($so-width / 12) - ($so-gutter * 11 / 12); }
  .so-col-2 { width: ($so-width / 6) - ($so-gutter * 10 / 12); }
  .so-col-3 { width: ($so-width / 4) - ($so-gutter * 9 / 12); }
  .so-col-4 { width: ($so-width / 3) - ($so-gutter * 8 / 12); }
  .so-col-5 { width: ($so-width / (12 / 5)) - ($so-gutter * 7 / 12); }
  .so-col-6 { width: ($so-width / 2) - ($so-gutter * 6 / 12); }
  .so-col-7 { width: ($so-width / (12 / 7)) - ($so-gutter * 5 / 12); }
  .so-col-8 { width: ($so-width / (12 / 8)) - ($so-gutter * 4 / 12); }
  .so-col-9 { width: ($so-width / (12 / 9)) - ($so-gutter * 3 / 12); }
  .so-col-10 { width: ($so-width / (12 / 10)) - ($so-gutter * 2 / 12); }
  .so-col-11 { width: ($so-width / (12 / 11)) - ($so-gutter * 1 / 12); }
  .so-col-12 { width: $so-width; }

  .so-visible-md {
    display: block !important;
  }
  .so-hidden-md {
    display: none !important;
  }
}
